<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- 图形填充颜色 -->
    <solid android:color="#ffffffff" />
    <!-- 边界线宽度及颜色 -->
     <stroke
        android:width="1dp"
        android:color="#ffbbbbbb" />
    <!-- 圆角大小，以圆的半径表示 -->
    <corners android:radius="10dp" />
    <!-- 图形内部边距 -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

</shape>
