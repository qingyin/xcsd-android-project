        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/my_rlUserInfo"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                android:clickable="true" >

                <com.tuxing.app.view.RoundImageView
                    android:id="@+id/my_user_head"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/my_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignTop="@id/my_user_head"
                    android:layout_toRightOf="@+id/my_user_head"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/my_user_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_user_name"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/my_user_head"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/ivArrowSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="matrix"
                    android:src="@drawable/arrow_gray" />
                <ImageView
                        android:id="@+id/iv_wipe"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_toLeftOf="@+id/ivArrowSetting"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_wipe"
                        android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_my_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_invatation"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_44"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingRight="10dip" >

                    <com.tuxing.app.view.RoundImageView
                        android:id="@+id/my_invatation_icon"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/invatation_icon" />

                    <TextView
                        style="@style/text_setting_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/my_invatation_icon"
                        android:text="@string/invatation_man" />

                    <ImageView
                        android:id="@+id/iv_invatation_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="matrix"
                        android:src="@drawable/arrow_gray" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginLeft="10dp"
                    android:background="@color/login_line" />

                <!--<RelativeLayout-->
                    <!--android:id="@+id/my_cloudcard_number"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="@dimen/dp_44"-->
