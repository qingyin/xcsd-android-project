<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
              android:paddingBottom="@dimen/dp_10"
>

    <View
            android:id="@+id/view_1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_22"
    >

    </View>
    <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/item_message_bg"
                    >

    <TextView
            android:id="@+id/classroom_catalog_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_3"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"/>

    <TextView
            android:id="@+id/classroom_catalog_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_37"
            android:lineSpacingExtra="@dimen/dp_3"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"/>

    <TextView
            android:id="@+id/classroom_catalog_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_12"
            android:layout_below="@id/classroom_catalog_item_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/classroom_view1"
            android:textSize="@dimen/sp_10"/>
    <ImageView
            android:id="@+id/classroom_catalog_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_below="@id/classroom_catalog_item_title"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_8"
           android:src="@drawable/classroom_play_icon"/>


    <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/qzq_gray"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_below="@id/classroom_catalog_item_time"
    />

</RelativeLayout>
</LinearLayout>
