<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/forshare_set"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        >

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_one"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_two"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_forshare_one"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_three"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_forshare_two"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_four"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_forshare_three"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_five"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_forshare_four"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_six"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_forshare_five"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_seven"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/iv_forshare_one"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_eight"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/iv_forshare_one"
            android:layout_toRightOf="@id/iv_forshare_seven"
            android:src="@drawable/default_avatar" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/iv_forshare_nine"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/iv_forshare_one"
            android:layout_toRightOf="@id/iv_forshare_eight"
            android:src="@drawable/default_avatar" />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray_line"
        ></View>


    <TextView
        android:id="@+id/text_forshare_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="@string/forshare_set_title"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />


    <EditText
        android:id="@+id/et_forshare_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:hint="给朋友留言"
        android:textColorHint="@color/text_gray"
        android:padding="@dimen/dp_6"
        android:textColor="@color/black5"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray_line"
        ></View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >


        <TextView
            android:id="@+id/tv_forshare_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black5"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/gray_line"></View>

        <TextView
            android:id="@+id/tv_forshare_sent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/text_teacher"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray_line"
        ></View>
</LinearLayout>