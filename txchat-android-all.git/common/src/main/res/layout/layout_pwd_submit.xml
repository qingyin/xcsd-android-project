<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg" >

        <LinearLayout
            android:id="@+id/ll_old_pwd"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal" >

            <com.tuxing.app.view.ClearEditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入旧密码"
                android:inputType="textPassword|textCapCharacters"
                android:maxLength="16"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_pwd"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/ll_old_pwd"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bg" />

            <com.tuxing.app.view.ClearEditText
                android:id="@+id/et_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:inputType="textPassword|textCapCharacters"
                android:maxLength="16"
                android:minWidth="50dip"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_pwd1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/ll_new_pwd"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/bg" />

            <com.tuxing.app.view.ClearEditText
                android:id="@+id/et_new_pwd1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请再输入一次新密码"
                android:inputType="textPassword|textCapCharacters"
                android:maxLength="16"
                android:minWidth="50dip"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_new_pwd1"
            android:background="@color/bg" >
        </View>
    </RelativeLayout>

</LinearLayout>