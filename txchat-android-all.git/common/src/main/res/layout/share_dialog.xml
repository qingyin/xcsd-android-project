<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/share_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey8"
        android:orientation="vertical" >

        <Button
            android:id="@+id/share_pop_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/edu_color_5"
            android:gravity="center|right"
            android:paddingRight="20dip"
            android:text="@string/close"
            android:textColor="@drawable/btn_white_txt_font"
            android:textSize="16dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/share_friends_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:background="@null"
                    android:src="@drawable/share_friends" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/wechat_friends"
                    android:textColor="@color/blue"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/share_wechat_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:background="@null"
                    android:src="@drawable/share_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/wechat_circle"
                    android:textColor="@color/blue"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/share_weibo_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:background="@null"
                    android:src="@drawable/share_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/weibo"
                    android:textColor="@color/blue"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>