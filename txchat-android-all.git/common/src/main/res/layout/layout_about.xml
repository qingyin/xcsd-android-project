<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >
        
        

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:id="@+id/versionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_line"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/about_check_new"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@id/versionTV"
             android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:padding="5dip"
            android:text="检查更新"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
<!-- 
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="北京土星教育科技有限公司"
            android:textColor="@color/text_gray" /> -->
            
            
            <TextView
                    android:id="@+id/about_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/btn_back"
                    android:textColor="@color/text_teacher"
                    android:padding="10dp"
                    android:textSize="@dimen/sp_14"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_back_title_t"/>
    </RelativeLayout>

    
</RelativeLayout>