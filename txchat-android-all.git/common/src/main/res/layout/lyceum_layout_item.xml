<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lyceum_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:background="@drawable/lyceum_home_item_text_shape"
        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/rl_artil_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dip"
        android:background="@drawable/lyceum_home_item_shape">

        <TextView
            android:id="@+id/lyceum_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:text="ddddddddddddddddddd"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <com.tuxing.app.view.MyImageView
            android:id="@+id/lyceum_top_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lyceum_top_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defal_down_lym_proress" />

        <TextView
            android:id="@+id/lyceum_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/lyceum_top_pic"
            android:layout_marginTop="0dp"
            android:background="@color/login_line" />

        <TextView
            android:id="@+id/lyceum_summary"
            style="@style/text_gray_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lyceum_top_pic"
            android:layout_alignRight="@+id/lyceum_top_pic"
            android:layout_below="@+id/lyceum_line"
            android:layout_marginTop="10dip"
            android:clickable="false"
            android:focusable="false"
            android:gravity="left|center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lyceum_top_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lyceum_top_pic"
            android:layout_alignRight="@+id/lyceum_top_pic"
            android:layout_below="@+id/lyceum_line"
            android:layout_marginTop="10dip"
            android:clickable="false"
            android:focusable="false"
            android:gravity="left|center"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lyceum_summary_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/lyceum_summary"
            android:layout_marginTop="10dp"
            android:background="@color/login_line"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_read_homedata"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_alignLeft="@+id/lyceum_top_pic"
            android:layout_alignRight="@+id/lyceum_top_pic"
            android:layout_below="@id/lyceum_summary_line"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                style="@style/text_setting_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/read_homedata" />

            <ImageView
                android:id="@+id/iv_lyceum_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="matrix"
                android:src="@drawable/arrow_gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyceum_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyceum_line"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/lyceum_tope_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lyceum_top_pic"
            android:layout_alignLeft="@+id/lyceum_top_pic"
            android:layout_alignRight="@+id/lyceum_top_pic"
            android:alpha="0.8"
            android:background="@color/black"
            android:gravity="left|center"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="2dip"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>