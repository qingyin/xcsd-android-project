<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/test_first_header"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/task_header_bg"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/test_first_back_img_layout"
                android:layout_width="25dip"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/test_first_back_img"
                    android:layout_width="12dip"
                    android:layout_height="22dip"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <TextView
                android:id="@+id/test_first_back_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/test_first_back_img_layout"
                android:gravity="center_vertical"
                android:text="@string/back"
                android:textColor="@drawable/btn_white_txt_font"
                android:textSize="16dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <TextView
                android:id="@+id/test_first_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/topic"
                android:textColor="@color/white"
                android:textSize="16dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/test_first_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="12dip"
        android:cacheColorHint="@color/transparent"
        android:columnWidth="120dip"
        android:gravity="center"
        android:horizontalSpacing="12dip"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dip" />

    <LinearLayout
        android:id="@+id/test_first_empty_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/test_first_empty_btn"
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_observer_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="11dip"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/test_first_empty_txt"
            android:textColor="@color/black9"
            android:textSize="15dip" />
    </LinearLayout>

</LinearLayout>