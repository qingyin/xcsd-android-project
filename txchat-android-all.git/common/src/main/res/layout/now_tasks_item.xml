<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:background="@color/grey2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dip"
        android:background="@drawable/corner_white_bg" >

        <TextView
            android:id="@+id/now_tasks_img"
            android:layout_width="12dip"
            android:layout_height="78dip"
            android:layout_alignParentLeft="true"
            android:layout_margin="1dip" />
        
        <RelativeLayout
            android:id="@+id/now_tasks_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_toRightOf="@id/now_tasks_img" >

            <TextView
                android:id="@+id/now_tasks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:textColor="@drawable/btn_black_txt_font"
                android:textSize="18dip"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="50dip"
            android:layout_height="80dip"
            android:layout_toRightOf="@id/now_tasks_title_layout"
            android:gravity="center" >

            <ImageView
                android:id="@+id/started_task_logo"
                android:layout_width="36dip"
                android:layout_height="14dip"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/now_tasks_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>