<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
                android:background="@color/white"
              android:paddingLeft="@dimen/dp_10"
              android:paddingBottom="@dimen/dp_13"
>



        <ImageView
                android:id="@+id/classroom_comment_item_icon"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:src="@drawable/default_avatar"/>
        <LinearLayout
                android:id="@+id/xing_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
        >
            <ImageView
                    android:id="@+id/comment_item_xing_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="visible"
                    android:src="@drawable/xing_s_selector"

            />
            <ImageView
                    android:id="@+id/comment_item_xing_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:visibility="visible"
                    android:src="@drawable/xing_s_selector"

            />
            <ImageView
                    android:id="@+id/comment_item_xing_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:visibility="visible"
                    android:src="@drawable/xing_s_selector"

            />
            <ImageView
                    android:id="@+id/comment_item_xing_4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:visibility="visible"
                    android:src="@drawable/xing_s_selector"

            />

            <ImageView
                    android:id="@+id/comment_item_xing_5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:visibility="visible"
                    android:src="@drawable/xing_s_selector"
            />

        </LinearLayout>

        <RelativeLayout
                android:id="@+id/llNameContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:layout_toLeftOf="@id/xing_ll"
                android:layout_toRightOf="@id/classroom_comment_item_icon"
                android:layout_alignBottom="@id/classroom_comment_item_icon"
                android:layout_alignTop="@id/classroom_comment_item_icon"

        >

            <TextView
                    android:id="@+id/classroom_comment_item_austor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/dp_3"
                    android:textColor="@color/question_time"
                    android:textSize="@dimen/sp_12"/>

            <TextView
                    android:id="@+id/classroom_comment_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/classroom_comment_item_austor"
                    android:textSize="@dimen/sp_10"
                    android:gravity="bottom"
                    android:textColor="@color/classroom_view1"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <TextView
                android:id="@+id/classroom_comment_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_12"
                android:layout_below="@id/classroom_comment_item_icon"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_alignLeft="@id/llNameContent"
                android:lineSpacingExtra="@dimen/dp_3"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"/>

        <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_alignLeft="@id/classroom_comment_item_content"
                android:background="@color/qzq_gray"
                android:layout_below="@id/classroom_comment_item_content"
        />


</RelativeLayout>