<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="2dp"
              android:paddingTop="2dp">
    <View
            android:id="@+id/view_blank"
            android:layout_height="@dimen/dp_20"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:visibility="gone"></View>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

        <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dddd"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="dddd"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>

        <TextView
                android:id="@+id/tv_content_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"/>

        <RelativeLayout
                android:id="@+id/rl_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone">

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img1_1"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>
                <LinearLayout
                        android:id="@+id/ll_status_btn"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:background="@color/black"
                        android:alpha="0.6"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:gravity="center" >

                        <ImageView
                                android:id="@+id/chatting_status_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/video_download_btn_nor" />
                </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone">

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img2_1"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img2_2"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/iv_img2_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone">

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/iv_img1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/iv_img1"
                    android:layout_below="@id/iv_img1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/iv_img2"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/iv_img3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone">

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img4_1"
                    android:layout_width="40dp"
                    android:layout_height="84dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img4_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/iv_img4_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>

            <com.tuxing.app.view.MyImageView
                    android:id="@+id/iv_img4_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/iv_img4_2"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_img4_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defal_down_proress"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="3dp"
                android:layout_marginTop="@dimen/dp_5">

            <TextView
                    android:id="@+id/tv_img_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|bottom"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12"/>

            <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/tv_img_count"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="left|top"
                    android:maxLines="2"
                    android:minHeight="60dp"
                    android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
    </LinearLayout>
        <View
                android:id="@+id/view_blank2"
                android:layout_height="150dp"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:visibility="gone"></View>
</LinearLayout>