<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/test_first_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/test_first_item_img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/test_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <com.tuxing.app.view.RotateTextView
            android:id="@+id/school_age"
            android:layout_width="67dip"
            android:layout_height="67dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/school_age_bg"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:text=""
            android:textColor="@color/red"
            android:textSize="10dip" />
    </RelativeLayout>

</RelativeLayout>