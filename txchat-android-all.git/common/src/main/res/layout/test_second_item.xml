<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/test_second_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dip" />

    <com.tuxing.app.view.RotateTextView
        android:id="@+id/school_age"
        android:layout_width="67dip"
        android:layout_height="67dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/school_age_bg"
        android:paddingLeft="13dp"
        android:paddingTop="4dp"
        android:text=""
        android:textColor="@color/red"
        android:textSize="10dip" />

    <ImageView
        android:id="@+id/test_second_state"
        android:layout_width="110dip"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/test_state_img"
        android:visibility="gone" />

</RelativeLayout>