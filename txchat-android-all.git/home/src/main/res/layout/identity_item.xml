<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/identity_name"
            style="@style/text_setting_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:layout_gravity="center_vertical"
            android:text="名称" />

        <RadioButton
            android:id="@+id/identity_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cb_setting"
            android:button="@null"
            android:focusable="false" />

        <TextView
            android:id="@+id/identity_select"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/selset_normal"
            android:focusable="false"
           android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>
    <View 
        android:id="@+id/iden_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="10dp"
        android:background="@color/login_line"
        />

</LinearLayout>