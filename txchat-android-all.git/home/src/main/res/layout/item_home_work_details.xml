<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp" >

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/sorrt_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar" />



        <TextView
            android:id="@+id/sorrt_item_name"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/sorrt_icon"
            android:textSize="@dimen/sp_16"
            android:text="位置记忆" />

        <TextView
            android:id="@+id/sorrt_item_work"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/sorrt_icon"
            android:layout_alignParentBottom="true"
            android:text="专注力"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14"
            />



        <TextView
            android:id="@+id/sorrt_item_time"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_94"
            android:layout_toRightOf="@+id/sorrt_icon"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray"
            android:text="第三关" />

        <TextView
            android:visibility="gone"
            android:id="@+id/sorrt_item_done"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_12"
            android:text="未过关" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:id="@+id/xing_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_18"
            >
            <ImageView
                android:id="@+id/comment_dialog_xing_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="visible"
                android:src="@drawable/xing_xl_selector"
                />
            <ImageView
                android:id="@+id/comment_dialog_xing_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="visible"
                android:src="@drawable/xing_xl_selector"
                />
            <ImageView
                android:id="@+id/comment_dialog_xing_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="visible"
                android:src="@drawable/xing_xl_selector"
                />

        </LinearLayout>



    </RelativeLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/login_line"
        ></View>



</LinearLayout>
