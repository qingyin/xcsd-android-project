<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/item_line_first"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"

        android:background="@color/qzq_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_home_homework_read"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unread_count_bg"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_home_teach_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="13dp"
                        android:text="林语堂"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_home_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="布置"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_study_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"

                    >

                    <ImageView
                        android:id="@+id/im_home_homework_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"

                        android:src="@drawable/learnwork_page_havetodo"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/im_home_homework_undone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/learnwork_page_todo"
                        android:visibility="gone" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_study_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:gravity="top">

                    <TextView
                        android:id="@+id/tv_home_string_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="top"
                        android:text="to:"


                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_home_stu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="张晓蕾"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/ll_study_to"

                    android:gravity="top">

                    <TextView
                        android:id="@+id/tv_test_mustdo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="20dp"
                        android:width="100dp"
                        android:singleLine="true"
                        android:text="必须要做的学能测试..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/tv_home_time_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:singleLine="true"

                        android:text="2016-4-6" />

                    <TextView
                        android:id="@+id/tv_home_time_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:singleLine="true"

                        android:text="15:06"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/bt_study_homework_delete"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="#FF0000"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/item_line_two"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"

        android:background="@color/qzq_gray"
        android:visibility="gone" />


</LinearLayout>
