<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/image_rl"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
         >

        <com.tuxing.app.view.MyImageView
            android:id="@+id/grid_item1_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defal_down_proress" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gride_imtm1_faile_rl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.5"
            android:background="@color/text_info_title" />

        <ImageView
            android:id="@+id/iv_faild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/msg_state_failed_resend" />

        <TextView
            android:id="@+id/grid_item1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_faild"
            android:layout_centerHorizontal="true"
            android:text="失败"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gride_imtm1_progress_rl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
         android:alpha="0.8"
         android:background="@color/black"
        android:visibility="gone" >

        <TextView
            android:id="@+id/load_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/gride_imtm1_faild_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_rl"
        android:layout_toRightOf="@+id/image_rl"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/appitem_del_select"
        android:visibility="gone" />

</RelativeLayout>