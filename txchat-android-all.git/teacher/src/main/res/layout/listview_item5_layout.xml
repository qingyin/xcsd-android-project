<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dip" >

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/select_receiver_item_icon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar" />

        <ImageView
            android:id="@+id/select_receiver_item_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_setting"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/select_receiver_item_name"
            style="@style/text_setting_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@id/select_receiver_item_cb"
            android:layout_toRightOf="@id/select_receiver_item_icon"
            android:text="超超妈妈" />
    </RelativeLayout>

</LinearLayout>