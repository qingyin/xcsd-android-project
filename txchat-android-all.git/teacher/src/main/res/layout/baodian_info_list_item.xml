<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg"
        >
    <RelativeLayout
            android:id="@+id/rl_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

        <ImageView
                android:id="@+id/head_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/default_avatar"/>


        <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_toRightOf="@id/head_icon"
                >
            <LinearLayout
                    android:id="@+id/name_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                <TextView
                        android:id="@+id/discuss_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/bao_dian_info_item_name"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_12"/>
                <TextView
                        android:id="@+id/job_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bao_dian_info_item_name"
                        android:layout_marginLeft="4dp"
                        android:textSize="@dimen/sp_9"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/discuss_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_ll"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/question_time"
                    />
        </RelativeLayout>
        <TextView
                android:id="@+id/discuss_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_icon"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@+id/head_icon"
                android:layout_marginLeft="8dp"
                android:textColor="@color/qzq_title_black"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="15dp"
                />

    </RelativeLayout>
</RelativeLayout>