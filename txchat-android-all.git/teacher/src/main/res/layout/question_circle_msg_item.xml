<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"


>
    <RelativeLayout
            android:id="@+id/rl_question"
            android:layout_width="fill_parent"
            android:paddingBottom="@dimen/dp_14"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">


        <TextView
                android:id="@+id/question_huifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/question_time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:text="xxx回复了"
                android:textSize="@dimen/sp_12"/>


        <ImageView
                android:id="@+id/head_icon"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_11"
                android:src="@drawable/default_avatar"/>


        <RelativeLayout
                android:id="@+id/llNameContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_toRightOf="@id/head_icon">

            <TextView
                    android:id="@+id/question_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="name"
                    android:textColor="@color/question_name"
                    android:textSize="@dimen/sp_14"/>

            <TextView
                    android:id="@+id/question_sub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/question_name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    android:text="subnmae"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/question_time"
            />
        </RelativeLayout>
        <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/head_icon"
                android:layout_marginTop="@dimen/dp_13"
                android:ellipsize="end"
                android:text="ss"
                android:textColor="@color/qzq_title_black"
                android:textSize="@dimen/sp_14"/>

        <TextView
                android:id="@+id/question_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_title"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>


    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_below="@id/rl_question"
            android:background="@color/bg"
    />
</RelativeLayout>