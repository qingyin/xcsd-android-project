<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <View
            android:id="@+id/line"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/expert_detailed_title_bg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_15"
            ></View>
    <TextView
            android:id="@+id/expert_detailed_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_10"
            android:layout_toRightOf="@+id/line"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            />

    <LinearLayout
            android:id="@+id/expert_detailed_item_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expert_detailed_item_title"
            android:orientation="vertical"
            >
    </LinearLayout>
    <TextView
            android:id="@+id/expert_detailed_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/expert_item_more"
            android:textSize="@dimen/sp_12"
            android:text="@string/expert_detailed_more"
            android:layout_below="@+id/expert_detailed_item_content_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
</RelativeLayout>