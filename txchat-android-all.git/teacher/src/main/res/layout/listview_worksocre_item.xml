<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >



    <RelativeLayout
        android:id="@+id/rl_set"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp" >

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/name_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar" />



        <TextView
            android:id="@+id/item_name"
            style="@style/text_setting_black"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/name_icon"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"
            android:text="林语堂" />

        <com.tuxing.app.view.RoundImageView
            android:id="@+id/name_heart"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/learnwork_keysymbol_s" />


        <TextView
            android:visibility="visible"
            android:id="@+id/item_times"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_arrow"
            android:layout_margin="@dimen/dp_4"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/skin_text1"
            android:text="8分" />

        <TextView
            android:visibility="gone"
            android:id="@+id/sorrt_item_dones"
            style="@style/text_setting_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/skin_text1"
            android:layout_marginRight="@dimen/dp_20"
            android:text="作业未提交" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/item_arrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right_t" />



    </RelativeLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/login_line"
        ></View>



</LinearLayout>
