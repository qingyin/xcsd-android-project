<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ques_info_item_head_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:textColor="@color/qzq_comment_content"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_ques_item_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:clickable="true"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/ques_info_head_icon"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/ques_info_item_head_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2012-2012"
            android:textColor="@color/question_time_bg"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/ques_item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ques_info_item_head_time"
            android:layout_toRightOf="@id/ques_info_head_icon"
            android:ellipsize="end"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/expert_detail_text"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


    <TextView
        android:id="@+id/ques_info_item_head_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:textColor="@color/qzq_comment_content"
        android:textIsSelectable="true"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receive_notice_info_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_11"
        android:visibility="gone">


    </LinearLayout>

    <TextView
        android:id="@+id/ques_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="全部回答"
        android:textColor="@color/qzq_comment_content"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/qzq_gray" />

        <View
            android:layout_width="78dp"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/teacher_help_theme_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/question_info_header__bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingBottom="50dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hey_icon"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ques_no_ans_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="稍后专家会为你解答"
            android:textColor="@color/grid_background"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


</LinearLayout>